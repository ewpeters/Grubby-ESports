:javascript
  $(document).ready(function(){
    $(".album_pic").click(function() {
      $.ajax({
        type: "GET",
        url: "/albums/slide/"+ $(this).attr('id') + ".js",
        data: {position: $(this).attr('position') },
        success: function(data) {
          var json = jQuery.parseJSON(data);
          $(".ajax-replace").html(json.html);
        },
      	error: function(data) {

      	}
      });
      return false;
    });
  })
