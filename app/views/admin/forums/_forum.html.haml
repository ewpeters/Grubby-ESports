%tr{ :class => stripe }
  %td.icon
    = link_to theme_image_tag("edit.png", :alt => t(:Edit), :title => t(:Edit)), edit_admin_forum_path(forum)
    = link_to theme_image_tag("delete.png", :alt => t(:Delete), :title => t(:Delete)), admin_forum_path(forum), :method => :delete, :confirm => t(:confirm_deletion, :thing => "forum")
  %td{:style => "text-align:left !important"}
    = theme_image_tag("extender.jpg", :style => "padding-left:#{depth*20}px") if extender
    = link_to forum.title, forum_path(forum)
  %td= forum.topics.count
  %td= forum.posts.count
  %td
    - unless forum.first?
      = link_to theme_image_tag("top.jpg", :alt => t(:Top), :title => t(:Top)), move_to_top_admin_forum_path(forum), :method => :put
      = link_to theme_image_tag("up.jpg", :alt => t(:Up), :title => t(:Up)), move_up_admin_forum_path(forum), :method => :put
    = forum.position
    - unless forum.last?
      = link_to theme_image_tag("down.jpg", :alt => t(:Down), :title => t(:Down)), move_down_admin_forum_path(forum), :method => :put
      = link_to theme_image_tag("bottom.jpg", :alt => t(:Bottom), :title => t(:Bottom)), move_to_bottom_admin_forum_path(forum), :method => :put
= render :partial => forum.children.sort_by(&:position), :locals => { :extender => true, :depth => depth+1 }
