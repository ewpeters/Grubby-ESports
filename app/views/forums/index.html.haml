- @title = t(:Viewing_forums)

#forum_body
  #header
    %span Team Grubby Forums
    - if logged_in?
      %span{:style => "position:absolute; right: 10px; font-size: 12px"}= "#{t(:topics_count, :count => @topics)} - #{t(:posts_count, :count => @posts)} - #{t(:users_count, :count => @topics)}"
  #forums_body
    - unless @forums.empty?
      = render :partial => @forums


