%h2 Sent
%table{:border => 1}
  %tr
    %th Del?
    %th Subject
    %th To
    %th Sent
  - if @messages.size == 0
    %tr
      %td{:colspan => 4} No messages
  - else
    - @messages.each do |message|
      %tr
        %td= check_box_tag "delete[]", message.id
        %td= link_to h(message.subject), user_message_path(@user, message)
        %td= link_to h(message.recipient.login), user_path(@user)
        %td=h message.created_at.to_s(:long)
      %tr
        %td{:colspan => 4}= submit_tag "Delete"
= link_to "Inbox", user_messages_path(@user)
